<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <% render 'shared/devise_messages'%>

    <p class="navbar-text pull-right">
      <% if account_signed_in? && current_account.group %>
        Group: <strong><%= link_to current_account.group.name, trainer_path %></strong>.
        <%= link_to 'Edit profile', edit_account_registration_path, :class => 'navbar-link' %> |
        <%= link_to "Logout", destroy_account_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
        <%= link_to "Sign up", new_account_registration_path, :class => 'navbar-link'  %> |
        <%= link_to "Login", new_account_session_path, :class => 'navbar-link'  %>
      <% end %>
    </p>

    <%= yield %>
  </body>
</html>
